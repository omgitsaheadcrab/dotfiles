[module/backlight]
type = internal/xbacklight
output = ${general.monitor}
format = <ramp>
ramp-0 = 
ramp-0-foreground = ${colors.fg}
ramp-1 = 
ramp-1-foreground = ${colors.fg}
ramp-2 = 
ramp-2-foreground = ${colors.fg}

interactive = true

[module/i3]
type = internal/i3
