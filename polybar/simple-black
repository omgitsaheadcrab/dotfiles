label-foreground = ${colors.fg}


[module/volume]
type = internal/pulseaudio

sink = default
interval = 5

format-volume = %{A3:~/.config/polybar/vmixer.sh:} <ramp-volume> %{A}
label-muted = 
label-muted-foreground = ${colors.fg}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-foreground = ${colors.fg}


