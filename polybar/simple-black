[module/date]
type = internal/date
interval = 1
format = %{A1:~/.config/polybar/calendar.sh:} <label> %{A}
format-padding = 5
format-background = ${colors.bg}
format-foreground = ${colors.fg}

date = %A, %b. %d%
time = %H:%M:%S

label = %date%  %time%
